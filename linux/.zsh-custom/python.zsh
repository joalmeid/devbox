# Use a virtualenv by default
export VIRTUAL_ENV_DISABLE_PROMPT=true
source ~/.virtualenvs/py3/bin/activate
alias py2="source ~/.virtualenvs/py2/bin/activate"
alias py3="source ~/.virtualenvs/py3/bin/activate"

alias venvon="export VIRTUAL_ENV_DISABLE_PROMPT=false"
alias venvoff="export VIRTUAL_ENV_DISABLE_PROMPT=true"

